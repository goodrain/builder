    JDK_URL_15=${JDK_URL_15:-"$JDK_BASE_URL/arm64/openjdk15.0.2_7.tar.gz"}
    JDK_URL_14=${JDK_URL_14:-"$JDK_BASE_URL/arm64/openjdk14.0.2_12.tar.gz"}
    JDK_URL_13=${JDK_URL_13:-"$JDK_BASE_URL/arm64/openjdk13.0.2_8.tar.gz"}
    JDK_URL_12=${JDK_URL_12:-"$JDK_BASE_URL/arm64/openjdk12.0.2_10.tar.gz"}
    JDK_URL_11=${JDK_URL_11:-"$JDK_BASE_URL/arm64/openjdk11.0.19_7.tar.gz"}
    JDK_URL_10=${JDK_URL_10:-"$JDK_BASE_URL/arm64/openjdk10.0.2_13.tar.gz"}
    JDK_URL_1_9=${JDK_URL_1_9:-"$JDK_BASE_URL/arm64/openjdk9_181.tar.gz"}
